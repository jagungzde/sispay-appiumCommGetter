<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_text"
        android:text="Please input your simcard number, will be used for self OTP :"
        android:textAppearance="?android:textAppearanceLarge"></TextView>

    <EditText
        android:id="@+id/etPhone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="+628186612321"
        android:layout_margin="@dimen/small_text">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit">
        </Button>
        <Button
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Use">
        </Button>
    </LinearLayout>
</LinearLayout>